{
  "compilerOptions": {
    "esModuleInterop": true, // import * as React from 'react';  -> import React from 'react';
    "sourceMap": true, // error났을 때 에러난 위치 찾아갈 때 좋음
    "lib": ["ES2020", "DOM"],
    "jsx": "react", // jsx -> React
    "module": "esnext", // 최신 모듈을 쓰겠음 (import, export)
    "moduleResolution": "Node", // 노드가 import, export를 해석할 수 있게
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"]
    }
  }
}
